<section class="engine">
    <a rel="nofollow" href="#">Created by MCA</a>
</section>
<section class="mbr-navbar mbr-navbar--freeze mbr-navbar--absolute mbr-navbar--transparent mbr-navbar--sticky mbr-navbar--auto-collapse" id="menu-0">
    <div class="mbr-navbar__section mbr-section">
        <div class="mbr-section__container container">
            <div class="mbr-navbar__container">
                <div class="mbr-navbar__column mbr-navbar__column--l mbr-navbar__brand">
                    <span class="mbr-navbar__brand-link mbr-brand mbr-brand--inline">
                        <span class="mbr-brand__name">
                            <%= link_to "NORMINRING MOTORBIKES",root_path, :class=>'mbr-brand__name text-white' %>
                            <!-- <a class="mbr-brand__name text-white" href="/">NORMINRING MOTORBIKES</a> -->
                        </span>
                    </span>
                </div>
                <div class="mbr-navbar__hamburger mbr-hamburger text-white">
                    <span class="mbr-hamburger__line"></span>
                </div>
                <div class="mbr-navbar__column mbr-navbar__menu">
                    <nav class="navbar navbar-inverse navbar-fixed-top">
                        <div class="mbr-navbar__column">
                            <ul class="nav navbar-nav navbar-right mbr-navbar__items mbr-navbar__items--right mbr-buttons mbr-buttons--freeze mbr-buttons--right btn-decorator mbr-buttons--active mbr-buttons--only-links">
                                <% if session[:role] %>
                                <li class="mbr-navbar__item">
                                 <%= form_tag(search_main_path('0-0'), class: 'navbar-form', method: 'get') do %>
                                 <%= text_field_tag :searchtext, params[:searchtext], class: 'form-control', placeholder: 'Quick Search...', autofocus: 'true' %>
                                 <% end %>
                             </li>
                             <li class="mbr-navbar__item">
                                <%= link_to raw('<span class="fa fa-upload"></span> UPLOAD'),  main_upload_path, remote: true, data: { toggle: 'modal', target: "#inventory" }, style: 'color : #fff' %>

                            </li>
                                <% if session[:role] == 'Administrator' %>
                                <li class="mbr-navbar__item">
                                    <%= link_to raw('<span class="fa fa-sign-out"></span> LOGOUT'),  authenticate_logout_path, style: 'color : #fff', data: { confirm: 'Are you sure do you want to logout?' } %>
                                </li>
                                <% end %>

                            <% else %>
                           
                            <li class="mbr-navbar__item">
                                <%= link_to raw('<span class="fa fa-user"></span> LOGIN'),  authenticate_login_path, style: 'color : #fff', class: 'mbr-buttons__btn btn btn-default mbr-buttons__link text-white', remote: true %>
                            </li>
                         <% end %>
                     </ul>
                 </div>
             </nav>
         </div>
     </div>
 </div>
</div>
</section>
