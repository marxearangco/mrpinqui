<br /><br /><br /><br /><br />

<div class="col-md-6 col-lg-6 col-xs-12 col-sm-12">
  <div class="modal-dialog modal-sm" style="border: 1px solid #fff; border-radius: 5px">
    <!-- <div class="modal-content"> -->
    <%= form_tag(:action=>'attempt_login', class: 'form-horizontal') do %>
    <div class="modal-header">
     <h4 class="modal-title" style="color: #fff"><i class="fa fa-lock fa-lg"></i> &nbsp; &nbsp;&nbsp;Please Login</h4>
   </div>
   <div class="modal-body">
     <div class="row">
      <div class="form-group">
       <%= text_field_tag :user, nil, class: 'form-control', required: true, placeholder: 'User Name', autofocus: 'true', data: {content: 'Username is required.', trigger: 'manual', placement: 'top' } %>
     </div>
     <div class="form-group">
      <%= password_field_tag :password, nil, class: "form-control", required: true, placeholder: 'Password'  %>
    </div>
    <div class="form-group">
      <%= select_tag :branch, options_from_collection_for_select(@branch, "locationCode", "locationCode"), prompt: 'Select Branch', class: "form-control", required: true %>
    </div>
    <br>
    <div class="form-group">
      <input type="checkbox" value="remember-me" id="chk">
      <label for="chk" style="color: #fff">Remember me</label>
    </div>
    <br>
    <div class="row">
      <span style="color: #EC6E12; font-style: italic;"><%= flash[:notice] %></span>
    </div>
  <br>
  </div>
  <div class="modal-footer">
   <%= submit_tag 'Login', class: 'btn btn-default ' %>
 </div>	
 <% end %>
</div>
<!-- </div> -->
</div>

